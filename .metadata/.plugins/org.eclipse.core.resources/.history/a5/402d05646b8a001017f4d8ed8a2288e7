package chapter2;

import java.util.Locale;

public class Lab_02 {
	public static void main(String[] args) {
		Locale.setDefault(Locale.US);
		int day = 1;
		switch (day) {
		case 1:
			System.out.println("Monday");
			break;
		case 2:
			System.out.println("Tuesday");
			break;
		case 3:
			System.out.println("Wednesday");
			break;
		default:
			System.out.println("Another day");
		}
	}
//	scanner.close();
}
